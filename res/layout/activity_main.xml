<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android1:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="beginning" >

    <Button
        android1:id="@+id/Button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/Button1"
        android:onClick="clearCache"
        android:text="@string/button_clearCache" />

    <Button
        android1:id="@+id/Button1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_alignParentTop="true"
        android1:onClick="sendMessage"
        android1:text="@string/button_readXML" />

    <EditText
        android1:id="@+id/edit_message"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignBaseline="@+id/Button1"
        android1:layout_alignBottom="@+id/Button1"
        android1:layout_alignParentLeft="true"
        android1:ems="10"
        android1:hint="@string/edit_message" />

    <Button
        android1:id="@+id/button4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/Button2"
        android1:onClick="getUserAccounts"
        android1:text="User Accounts" />

    <Button
        android1:id="@+id/button3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/button4"
        android1:layout_toRightOf="@+id/Button2"
        android1:onClick="resetDatabase"
        android1:text="Reset Database" />

</RelativeLayout>